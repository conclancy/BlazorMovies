@page "/counter"
@inject SingletonService singleton
@inject TransietService transient 
 
<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Singleton count: @singleton.Value</p>
<p>Transiet count: @transient.Value</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<br />

<input type="number" @bind="currentCount"/>
<br />

<MoviesList Movies="movies"/>

@code {

    private List<Movie> movies;

    protected override void OnInitialized()
    {
        movies = new List<Movie>()
        {
            new Movie(){Title="Joker", ReleaseDate = new DateTime(2019, 7, 2)},
            new Movie(){Title="Avengers", ReleaseDate = new DateTime(2016, 11, 23)},
        };
    }

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        singleton.Value += 1;
        transient.Value += 1;
    }
}
