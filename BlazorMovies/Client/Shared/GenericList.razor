@typeparam TItem

@if (List == null)
{
    //<img src="data:image/png;base64," />

    @if (NullTemplate != null)
    {
        @NullTemplate
    }
    else
    {
        <img src="https://media2.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif" />
    }

    @if (EmptyTemplate != null)
    {
        @EmptyTemplate
    }
    else
    {
        <p>This text is null</p>
    }
}
else if (List.Count == 0)
{
    <p>There are no records to show</p>
}
else
{
    @foreach (var element in List)
    {
        @ElementTemplate(element)
    }
}

@code{
    [Parameter]
    public RenderFragment NullTemplate { get; set; }

    [Parameter]
    public RenderFragment EmptyTemplate { get; set; }

    [Parameter]
    public List<TItem> List { get; set; }

    [Parameter]
    public RenderFragment<TItem> ElementTemplate { get; set; }

}